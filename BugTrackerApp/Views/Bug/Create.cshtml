@using Microsoft.AspNetCore.Mvc.TagHelpers
@model BugTrackerApp.Models.Bug
@{
    ViewData["Title"] = "Create Bug";
}
<h3>Create a New Bug</h3>

<div class="form-container">
    <form asp-action="Create" method="post">
        <div class="form-group">
            <label asp-for="Title" class="control-label"></label>
            <input asp-for="Title" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Description" class="control-label"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
        </div>
        <div class="form-group">
            <label asp-for="Level" class="control-label"></label>
            <select asp-for="Level" class="form-control" asp-items="Html.GetEnumSelectList<Bug.BugLevel>()"></select>
        </div>
        <div class="form-group"> 
            <label asp-for="DateReported" class="control-label"></label> 
            <input asp-for="DateReported" class="form-control" type="date" /> 
        </div>
        <div class="form-group">
            <label asp-for="Type" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <select asp-for="Type" asp-items="@(new SelectList(ViewBag.ErrorTypes, "Value", "Text"))" class="form-control">
                    <option value="">-- Select Error Type --</option>
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>
</div>
