@model BugTrackerApp.Models.Bug

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>
<hr />

<div class="form-container">
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="Title" class="control-label"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="control-label"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Level" class="control-label"></label>
            <select asp-for="Level" class="form-control" asp-items="Html.GetEnumSelectList<Bug.BugLevel>()"></select>
        </div>
        <div class="form-group">
            <label asp-for="DateReported" class="control-label"></label>
            <input asp-for="DateReported" class="form-control" />
            <span asp-validation-for="DateReported" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="IsResolved" class="control-label"></label>
            <input asp-for="IsResolved" class="form-check-input" />
            <span asp-validation-for="IsResolved" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </form>
</div>

<div>
    <a class="btn btn-dark" asp-action="Index">Back to List</a>
</div>