@model BugTrackerApp.Models.Bug

@{
    ViewData["Title"] = "Edit Bug";
}
<h3>@ViewData["Title"]</h3>
<hr />

<div class="form-container">
    <form asp-action="Edit" method="post" >
        <div class="form-group">
            <label asp-for="Title" class="control-label"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-group edit-container">
            <label asp-for="Description" class="control-label"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Level" class="control-label"></label>
            <select asp-for="Level" class="form-control" asp-items="Html.GetEnumSelectList<Bug.BugLevel>()"></select>
            <span asp-validation-for="Level" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="DateReported" class="control-label"></label>
            <input asp-for="DateReported" class="form-control" />
            <span asp-validation-for="DateReported" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Type" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <select asp-for="Type" asp-items="ViewBag.ErrorTypes" class="form-control"></select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="IsHighPriority">High Priority</label>
            <input type="checkbox" asp-for="IsHighPriority" />
            <span asp-validation-for="IsHighPriority" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
            <a class="btn btn-dark" asp-action="Index">Back to List</a>
        </div>
    </form>
</div>
